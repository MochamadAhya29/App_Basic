<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.afiq.app_basic">

    <uses-permission android:name="android.permission.INTERNET" />
    

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Make App Basic"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SpinnerActivity" />
        <activity android:name=".ListviewActivity" />
        <activity android:name=".CustumActivity" />
        <activity android:name=".MiniWebActivity" />
        <activity
            android:name=".DetailHewanActivity"
            android:label="@string/title_activity_detail_hewan"
            android:parentActivityName=".CustumActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.afiq.app_basic.CustumActivity" />
        </activity>
        <activity android:name=".Input_userActivity" />
        <activity android:name=".pagerActivity"></activity>
    </application>

</manifest>
